{
  "name": "react-markdown-code-highlighter",
  "private": false,
  "version": "0.1.1",
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "style": "./src/style.css",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/onshinpei/ds-markdown"
  },
  "bugs": {
    "url": "https://github.com/onshinpei/ds-markdown/issues"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build:docs": "rimraf docs && vite build",
    "build": "rimraf dist &&npm run build:cjs && npm run build:esm && npm run build:less",
    "build:cjs": "tsc --project tsconfig-cjs.json && echo '{ \"type\": \"commonjs\" }' > dist/cjs/package.json",
    "build:esm": "tsc --project tsconfig-esm.json",
    "build:less": "lessc src/style.less dist/style.css",
    "lint": "eslint .",
    "preview": "vite preview",
    "release": "npm run build && node scripts/set-tag.cjs && cross-env RELEASE_MODE=true npm publish",
    "prepublishOnly": "node scripts/prepublish.js"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "highlight.js": "^11.11.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.12.0",
    "@babel/core": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint-react/eslint-plugin": "^1.48.5",
    "@eslint/js": "^9.25.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-prettier": "^5.3.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "less": "^4.3.0",
    "prettier": "3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-refresh": "^0.17.0",
    "rehype-stringify": "^10.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.40.2",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "unified": "^11.0.5",
    "vite": "^6.3.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "keywords": [
    "markdown",
    "react-markdown",
    "code-highlighting",
    "react",
    "react-component",
    "chatgpt",
    "claude",
    "deepseek",
    "chat-system",
    "markdown-renderer"
  ],
  "publishConfig": {
    "tag": "latest"
  }
}